@model  Student.Models.TestQuestionReportModels
<div class="col-lg-12">
    <div class="panel">
        <div class="panel-heading">

            Test Question Report
        </div>
        <div class="panel-body" ng-app="MyApp" ng-controller="MyController" ng-init="init()">
            <div class="form-horizontal">
                <div style="background-color:#4285F4;color:#fff">
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Test Paper</strong>: @Model.PaperName
                        </div>
                        <div class="col-md-6">
                            <strong>Student Name</strong>: @Model.StudentName
                        </div>
                    </div>

                    <br />



                </div>


          
            <hr />
            <div >
                <div  id="QList">

                    <div>


                        <div class="col-md-12">
                            <table id="tbl1">
                                <tbody>
                                    @{int a = 1;}
                                    @foreach (var l in Model._QList)
                                    {
                                        <tr class="@a" style="background-color: #9999ff;color:white">
                                            <td style="width: 10%; border-right: solid thin #eeeeee"><strong>Q.N. </strong>@a)</td>
                                            <td style="width: 65%;"> <div class="kkk">  @Html.Raw(@l.Question) </div></td>



                                        </tr>
                                        if (l.Question_TypeID == 8)
                                        {
                                            <tr>
                                                <td>A</td>
                                                <td>@Html.Raw(@l.OptionA)</td>
                                            </tr>
                                            <tr>
                                                <td>B</td>
                                                <td>@Html.Raw(@l.OptionB)</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td>A</td>
                                                <td>@Html.Raw(@l.OptionA)</td>
                                            </tr>
                                            <tr>
                                                <td>B</td>
                                                <td>@Html.Raw(@l.OptionB)</td>
                                            </tr>
                                            <tr>
                                                <td>C</td>
                                                <td>@Html.Raw(@l.OptionC)</td>
                                            </tr>
                                            <tr>
                                                <td>D</td>
                                                <td>@Html.Raw(@l.OptionD)</td>
                                            </tr>
                                        }

                                        <tr style="background-color:#33ff99;color:white">
                                            <td> <strong>Answer Key</strong> </td>
                                            <td>@l.Answer_Key</td>



                                        </tr>
                                        <tr>
                                            <td><strong>Response Key</strong> </td>
                                            <td>@l.Response_Key</td>
                                        </tr>
                                        a = a + 1;
                                    }

                                </tbody>
                            </table>
                        </div>


                    </div>






                </div>

            </div>

        </div>
    </div>
</div>
</div>
